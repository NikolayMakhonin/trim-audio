{
  "name": "@flemist/trim-audio",
  "version": "0.0.1",
  "description": "Normalize and trim audio in Float32Array format",
  "main": "dist/index.cjs",
  "files": [
    "dist/**"
  ],
  "engines": {
    "node": ">=14.17.6",
    "yarn": "^1.22"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NikolayMakhonin/trim-audio.git"
  },
  "keywords": [
    "trim",
    "audio",
    "normalize",
    "Float32Array"
  ],
  "author": "Nikolay Makhonin",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NikolayMakhonin/trim-audio/issues"
  },
  "homepage": "https://github.com/NikolayMakhonin/trim-audio",
  "scripts": {
    "prepublishOnly": "yarn build && yarn run test:ci",
    "lint": "eslint \"./src/**/*.ts\"",
    "lint:fix": "eslint --fix \"./src/**/*.ts\"",
    "build": "rimraf dist && rollup -c && cpy \"**/assets/**\" \"../dist/\" --parents --cwd=src",
    "coverage-check": "nyc check-coverage --report-dir tmp/coverage/lcov --lines 50 --functions 50 --branches 0 --statements 50",
    "test": "mocha ./src/**/*.test.ts",
    "test:coverage": "rimraf tmp/coverage && nyc --all mocha ./src/**/*.test.ts && yarn run coverage-check",
    "test:watch": "mocha --watch ./src/**/*.test.ts",
    "test:ci": "rimraf tmp/coverage && nyc --all mocha ./src/**/*.test.ts ./dist/**/*.test.cjs && yarn run coverage-check",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "ci:test": "yarn install --frozen-lockfile && yarn build && yarn run test:ci"
  },
  "devDependencies": {
    "@flemist/ffmpeg-encode-decode": "^0.0.4",
    "@rollup/plugin-alias": "^3.1.9",
    "@rollup/plugin-commonjs": "^21.0.3",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.3.1",
    "@types/assert": "^1.5.6",
    "@types/expect": "^24.3.0",
    "@types/fs-extra": "^9.0.13",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "cpy-cli": "^4.1.0",
    "eslint": "^8.12.0",
    "eslint-config-pro": "^2.1.1",
    "expect": "^27.5.1",
    "fs-extra": "^10.0.1",
    "globby": "^13.1.1",
    "mocha": "^9.2.2",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.70.1",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-multi-input": "^1.3.1",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@stdlib/math-base-special-erfcinv": "^0.0.6",
    "@stdlib/math-base-special-erfinv": "^0.0.6"
  }
}
